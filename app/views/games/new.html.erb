<h1>New game</h1>
<div class="d-flex">
  <% @letters.each do |letter| %>
  <p class="m-1 p-3 bg-primary border border-white text-white font-weight-bold"><%= letter %></p>
  <% end %>
</div>
<p>What is the longest word you can find?</p>
<form action="/score"  method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input id="tags_list" name="letters" type="hidden" value =<%= @letters.join("") %>  />
  <input id="tags_list" name="time" type="hidden" value =<%= @time %>  />
  <input type="submit" value="Play">
</form>
